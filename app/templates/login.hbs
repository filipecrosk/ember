<header class="page-header page-header-mini">
	<div class="background-image-holder" style="background: url(/images/stock/bike.jpg) 50% 0%;">
		<img class="background-image" alt="Background Image" src="/images/stock/bike.jpg" style="display: none;">
	</div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="text-white">Entrar no Alooga</h1>
			</div>
		</div>
	</div>
</header>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-6 col-xs-12 col-md-offset-2">
			<div class="panel panel-default">
				<div class="panel-heading">Acesse</div>
			  <div class="panel-body">
			  	<form {{action 'authenticate' on='submit'}}>
						<div class="form-group">
					    <label for="identification">Seu e-mail</label>
					    {{input id='identification' class='form-control' placeholder='email@site.com.br'
					           value=identification}}
					  </div>
					  <div class="form-group">
					    <label for="password">Sua Senha</label>
					    {{input id='password' class='form-control' placeholder='Sua senha super secreta'
					           type='password' value=password}}
					  </div>
					  <button type="submit" class="btn btn-default signin">Entrar</button>

					  <hr>
					  <a href="" title="">Esqueci minha senha</a>
					</form>
			  </div>
			</div>		
		</div>

		<div class="col-md-4 col-sm-6 col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">Não possui cadastro?</div>
			  <div class="panel-body">
			  	<p>
			  		Não perca tempo, cadastre-se agora mesmo.
			  	</p>
			  	{{#link-to 'signup' classNames="btn btn-default signup"}}Registre-se{{/link-to}}
			  </div>
			</div>		
		</div>


		
	</div>

	
	



<header class="page-header page-header-mini">
	<div class="background-image-holder" style="background: url(/images/stock/bike.jpg) 50% 0%;">
		<img class="background-image" alt="Background Image" src="/images/stock/bike.jpg" style="display: none;">
	</div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="text-white">Altere sua senha</h1>
			</div>
		</div>
	</div>
</header>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-6 col-xs-12 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">Por favor informe sua nova senha</div>
			  <div class="panel-body">
			  	<form {{action 'setNewPassword' on='submit'}}>
			  		{{input id='reset_password_token' type='hidden' value=controller.reset_password_token}}
						
						<div class="form-group">
					    <label for="password">Nova senha:</label>
							{{validated-input type="password" value=password errors=errors.password fieldid="password" placeholder='Uma senha legal tem pelo menos 8 caracteres'}}
					  </div>

					  <div class="form-group">
					    <label for="passwordConfirmation">Confirme sua nova senha:</label>
					    {{validated-input type="password" value=passwordConfirmation errors=errors.passwordConfirmation fieldid="passwordConfirmation"}}
					  </div>
					  <button type="submit" class="btn btn-default signin">Entrar</button>

					  <hr>
					  {{#link-to 'login'}}JÃ¡ lembrou a senha e quer logar direto?{{/link-to}}
					</form>
			  </div>
			</div>		
		</div>

		
	</div>
</div>
